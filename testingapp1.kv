#:kivy 1.10.0
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<ScreenManagement>:
    LoginScreen:
        id: main
    HomePage:
        id: home
    ViewHealth:
        id: viewhealth
    Modify:
        id: mod
    Setting:
        id: sett

<LoginScreen>:
    name: "main_screen"
   # canvas.before:
    #    Rectangle:
     #       pos: self.pos
      #      size: self.size
       #     source: 'tech1.jpg'
    Label:
        #text: 'Team 2b|!2b'
        font_size: 50
        pos_hint: {"center_x": 0.5, "center_y": 0.8}
        markup: True 
        text:'[b][color=008000]Team 2b|!2b[/color][/b]'
    GridLayout:
        size_hint: (0.6, 0.3)
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        cols: 2
        padding: 15

        Label:
            size_hint: (0.9, 0.1)
            text: "Username:"
            font_size: 30
            text_size: self.size
            valign: "middle"

        TextInput:
            id: user_name
            size_hint: (1.3, 0.1)
            cursor_blink: True
            font_size: 30
            multiline: False
            spacing: [5,5]
        Label:
            size_hint: (0.9, 0.1)
            text:"Password:"
            font_size: 30
            text_size: self.size
            valign: "middle"

        TextInput:
            id: passw
            size_hint: (1.3, 0.1)
            cursor_blink: True
            font_size: 30
            multiline: False
            password: True

    BoxLayout:
        orientation: 'vertical'        
        size_hint: (0.5, 0.2)
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        Button:
            height: 90
            text:'Login'
            font_size: 30
            
            on_press: root.manager.ids.main.login(user_name.text, passw.text)
            
            
<ViewHealth>:
    name: 'view_health'
    BoxLayout:
        orientation: 'vertical'
        Label:
            pos: 100, 100
            text:"Health Status"
            font_size: 20
        Button:
            text: "Previous"
            pos_hint: {'x': 0.9, 'y':0.1 }
            size_hint:(.2, .2)
	    #go back to previous screen
            on_press: root.manager.current = 'homepage'

<Modify>:
    name: 'modify'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text:"Modify Screen"
            font_size: 20
        Button:
            pos_hint: {'x': 0.7, 'y':0.08}
            size_hint:(.2,.2)
            text: "Previous"
            #go back to previous screen
            on_press: root.manager.current = 'homepage'

<Setting>:
    name: 'set'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Previous"
            pos_hint: {'x': 0.7, 'y':0.08 }
            size_hint:(.2, .2)
            #go back to previous screen
            on_press: root.manager.current = 'homepage'

<HomePage>:
    name: 'homepage'
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: "DMX-512 Interface"
            pos_hint:{'center_x': 0.5, 'center_y': 0.9}
    GridLayout:
        cols: 24
        spacing: '8dp'
        size_hint:1 , .2
        pos_hint: {'center_x': 0.6, 'center_y': 0.1}  
        Button:
            text: 'Some Option'
            font_size: 20
            #size_hint:(.2, .2)
            on_press: root.manager.current = 'view_health'
        Button:
            text: 'RGB Selection'
            font_size: 20
            #size_hint:(.2, .2)
            on_press: root.manager.current = 'modify'

        Button:
            text: 'Setting'
            font_size: 20
            on_press: root.manager.current = 'set'

        Button:
            #size_hint:(1,0.1)
            #pos_hint_y: 0.2
            text: 'Logout'
            font_size: 20
            on_press: root.manager.current = 'main_screen'

 
